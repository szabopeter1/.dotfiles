syntax on

" Statusline (Powerline needed)
set laststatus=2

" Commandline autocompletion
set wildmode=longest,list
set wildmenu

" Indent
set autoindent
set smartindent
set smarttab
set shiftwidth=4
set tabstop=4

set number
set wrap
set ruler

" Bells
set noerrorbells
set novisualbell

" Backup
set nobackup
set nowb
set noswapfile
